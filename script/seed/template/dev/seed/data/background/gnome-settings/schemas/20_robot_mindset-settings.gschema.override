###################
# global settings #
###################

[org.gnome.desktop.background:GNOME-Greeter]
picture-uri = 'file:///usr/share/backgrounds/robot_mindset_dev.png'
picture-uri-dark = 'file:///usr/share/backgrounds/robot_mindset_dev_dark.png'
show-desktop-icons = false

[org.gnome.login-screen]
logo='/usr/share/plymouth/robot_mindset_logo.png'

##################################
# ubuntu common session settings #
##################################

[org.gnome.shell:ubuntu]
always-show-log-out = true
favorite-apps = [ 'ubuntu-desktop-bootstrap_ubuntu-desktop-bootstrap.desktop', 'firefox_firefox.desktop', 'org.gnome.Nautilus.desktop']

[org.gnome.desktop.background:ubuntu]
picture-uri = 'file:///usr/share/backgrounds/robot_mindset_dev.png'
picture-uri-dark = 'file:///usr/share/backgrounds/robot_mindset_dev_dark.png'
show-desktop-icons = true

[org.gnome.desktop.screensaver:ubuntu]
#picture-uri = 'file:///usr/share/backgrounds/robot_mindset_dev.png'
picture-uri = 'file:///usr/share/backgrounds/robot_mindset_dev_dark.png'
